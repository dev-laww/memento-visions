<Project Sdk="Godot.NET.Sdk/4.3.0">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net7.0</TargetFramework>
        <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'ios' ">net8.0</TargetFramework>
        <EnableDynamicLoading>true</EnableDynamicLoading>
    </PropertyGroup>
    <ItemGroup>
        <Content Remove="script_templates\**" />
        <Compile Remove="script_templates\**" />
        <EmbeddedResource Remove="script_templates\**" />
        <None Remove="script_templates\**" />
        <Compile Update="addons\**">
            <Visible>false</Visible>
        </Compile>
        <Compile Update="Scripts\**\*.cs">
            <Namespace>Game</Namespace>
        </Compile>
        <Compile Remove="Scenes\**" />
        <EmbeddedResource Remove="Scenes\**" />
        <Compile Update="Scripts\Components\Managers\StatsManager.cs">
          <Namespace>Game</Namespace>
        </Compile>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Delaunator" Version="1.0.10" />
        <PackageReference Include="Firebelley.GodotUtilities" Version="5.0.0" />
        <PackageReference Include="OptimizedPriorityQueue" Version="5.1.0" />
    </ItemGroup>
</Project>